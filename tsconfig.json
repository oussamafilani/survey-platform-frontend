{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"],
    //other rules
    "baseUrl": "src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@shared/*": ["shared/*"],
      "@constants/*": ["constants/*"],
      "@app/*": ["app/*"],
      "@layout/*": ["layout/*"],
      "@graphql/*": ["apollo/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/pages/guest/routes.tsx"],
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
